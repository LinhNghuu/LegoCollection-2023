<!DOCTYPE html>
<html lang="en" data-theme="valentine">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css" />
    <title>Edit Set - <%= set.name %></title>
</head>

<body class="bg-pink-100">
    <%- include('partials/navbar', {page: '' }) %>

    <div class="container mx-auto p-4">
        <div class="max-w-xl mx-auto bg-white rounded-lg shadow-lg p-6">
            <h1 class="text-3xl font-bold text-pink-700 mb-6">Edit Set - <%= set.name %></h1>
            <form action="/lego/editSet" method="POST">
                <div class="mb-4">
                    <label for="name" class="block text-pink-700 text-sm font-bold mb-2">Name:</label>
                    <input type="text" id="name" name="name" value="<%= set.name %>" required class="form-input w-full rounded border border-pink-300 focus:border-pink-500 focus:ring focus:ring-pink-200">
                </div>

                <div class="mb-4">
                    <label for="year" class="block text-pink-700 text-sm font-bold mb-2">Year:</label>
                    <input type="number" id="year" name="year" value="<%= set.year %>" required class="form-input w-full rounded border border-pink-300 focus:border-pink-500 focus:ring focus:ring-pink-200">
                </div>

                <div class="mb-4">
                    <label for="num_parts" class="block text-pink-700 text-sm font-bold mb-2">Number of Parts:</label>
                    <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required class="form-input w-full rounded border border-pink-300 focus:border-pink-500 focus:ring focus:ring-pink-200">
                </div>

                <div class="mb-4">
                    <label for="img_url" class="block text-pink-700 text-sm font-bold mb-2">Image URL:</label>
                    <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required class="form-input w-full rounded border border-pink-300 focus:border-pink-500 focus:ring focus:ring-pink-200">
                </div>

                <div class="mb-4">
                    <label for="theme_id" class="block text-pink-700 text-sm font-bold mb-2">Theme:</label>
                    <select id="theme_id" name="theme_id" required class="form-select w-full rounded border border-pink-300 focus:border-pink-500 focus:ring focus:ring-pink-200">
                        <% themes.forEach(theme => { %>
                            <option value="<%= theme.id %>" <%= set.theme_id == theme.id ? 'selected' : '' %>><%= theme.name %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="mb-4">
                    <label for="set_num" class="block text-pink-700 text-sm font-bold mb-2">Set Number:</label>
                    <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly class="form-input w-full rounded border border-pink-300 focus:border-pink-500 focus:ring focus:ring-pink-200 cursor-not-allowed">
                </div>

                <div class="flex items-center justify-between gap-4">
                    <button class="bg-pink-600 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded transition duration-300" type="submit">Update Set</button>
                    <a href="/lego/deleteSet/<%= set.set_num %>" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition duration-300" onclick="return confirm('Are you sure you want to delete this set?');">Delete Set</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
