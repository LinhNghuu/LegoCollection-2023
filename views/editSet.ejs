<!DOCTYPE html>
<html lang="en" data-theme="valentine">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css" />
    <title>Edit Set - <%= set.name %></title>
</head>

<body tabindex="-1">
    <%- include('partials/navbar', {page: '' }) %>

    <!-- Content -->
    <div class="container mx-auto p-4">
        
        <!-- Form to Edit Set -->
        <div class="max-w-xl mx-auto">
            <h1 class="text-xl font-bold mb-4">Edit Set - <%= set.name %></h1>
            <form action="/lego/editSet" method="POST">
                <!-- Name -->
                <div class="mb-4">
                    <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name:</label>
                    <input type="text" id="name" name="name" value="<%= set.name %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                </div>

                <!-- Year -->
                <div class="mb-4">
                    <label for="year" class="block text-gray-700 text-sm font-bold mb-2">Year:</label>
                    <input type="number" id="year" name="year" value="<%= set.year %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                </div>

                <!-- Number of Parts -->
                <div class="mb-4">
                    <label for="num_parts" class="block text-gray-700 text-sm font-bold mb-2">Number of Parts:</label>
                    <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                </div>

                <!-- Image URL -->
                <div class="mb-4">
                    <label for="img_url" class="block text-gray-700 text-sm font-bold mb-2">Image URL:</label>
                    <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                </div>

                <!-- Theme -->
                <div class="mb-4">
                    <label for="theme_id" class="block text-gray-700 text-sm font-bold mb-2">Theme:</label>
                    <select id="theme_id" name="theme_id" required class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                        <% themes.forEach(theme => { %>
                            <option value="<%= theme.id %>" <%= set.theme_id == theme.id ? 'selected' : '' %>><%= theme.name %></option>
                        <% }) %>
                    </select>
                </div>

                <!-- Set Number (readonly) -->
                <div class="mb-4">
                    <label for="set_num" class="block text-gray-700 text-sm font-bold mb-2">Set Number:</label>
                    <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline cursor-not-allowed">
                </div>

                <!-- Submit button -->
                <div class="flex items-center justify-between">
                    <button class="btn btn-primary" type="submit">Update Set</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
