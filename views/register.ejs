<!DOCTYPE html>
<html lang="en" data-theme="valentine">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css" />
    <title>Register</title>
</head>
<body tabindex="-1">
    <%- include('partials/navbar', {page: '/register'}) %>

    <div class="container mx-auto p-4">
        <div class="hero bg-base-200 rounded-lg p-6 shadow-lg">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <% if (typeof successMessage !== 'undefined') { %>
                        <h1 class="text-5xl font-bold text-pink-500">Account Created!</h1>
                        <p class="py-6">Your account has been successfully created.</p>
                        <a href="/login" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition duration-300">
                            Proceed to Log in
                        </a>
                    <% } else { %>
                        <h1 class="text-5xl font-bold text-pink-500">Register</h1>
                        <p class="py-6">Please provide your credentials below</p>

                        <% if (errorMessage) { %>
                            <div class="text-red-600 mb-3"><%= errorMessage %></div>
                        <% } %>

                        <form method="post" action="/register" class="space-y-6">
                            <div class="flex flex-col">
                                <label for="userName" class="text-sm font-semibold text-gray-600">User Name</label>
                                <input id="userName" name="userName" type="text" placeholder="User Name" required
                                    class="mt-1 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition duration-200" 
                                    value="<%= typeof userName !== 'undefined' ? userName : '' %>">
                            </div>

                            <div class="flex flex-col">
                                <label for="password" class="text-sm font-semibold text-gray-600">Password</label>
                                <input id="password" name="password" type="password" placeholder="Password" required
                                    class="mt-1 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition duration-200">
                            </div>

                            <div class="flex flex-col">
                                <label for="password2" class="text-sm font-semibold text-gray-600">Confirm Password</label>
                                <input id="password2" name="password2" type="password" placeholder="Confirm Password" required
                                    class="mt-1 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition duration-200">
                            </div>

                            <div class="flex flex-col">
                                <label for="email" class="text-sm font-semibold text-gray-600">Email Address</label>
                                <input id="email" name="email" type="email" placeholder="Email Address" required
                                    class="mt-1 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition duration-200">
                            </div>

                            <input type="submit"
                                class="w-full bg-green-500 text-white p-3 rounded-md cursor-pointer hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                                value="Register">
                        </form>

                        <p class="mt-6">
                            Already have an account? <a href="/login" class="text-blue-500 hover:text-blue-600">Login here</a>
                        </p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
